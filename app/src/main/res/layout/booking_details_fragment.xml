<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".ui.fragments.BookingDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/RootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rootStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rootEnd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rootCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bookingFirstLayout"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="@drawable/mapbgcopy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/bookingBack"
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_back_1x"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bookingContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/rubikmedium"
                android:text="@string/booking_details"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/bookingBack"
                app:layout_constraintStart_toEndOf="@+id/bookingBack"
                app:layout_constraintTop_toTopOf="@+id/bookingBack" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/bookingShare"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                android:src="@drawable/ic_share_1x"
                app:layout_constraintBottom_toBottomOf="@+id/bookingContent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bookingContent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bookingSecondLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-250dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="20dp"
            android:background="@drawable/home_fragment_curve"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bookingFirstLayout">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="18dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/end"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_end="18dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.55" />

            <TextView
                android:id="@+id/bookingPortName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubikmedium"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:text="@string/View"
                android:textColor="@color/textcolor"
                app:layout_constraintEnd_toStartOf="@+id/end"
                app:layout_constraintStart_toStartOf="@+id/start"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bookingTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubikregular"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:text="@string/View"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookingPortName" />

            <View
                android:id="@+id/bookingView"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/liteGrey"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintTop_toBottomOf="@+id/bookingTime" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/bookingImageView"
                android:layout_width="19dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_flight_grey_1x"
                app:layout_constraintBottom_toBottomOf="@+id/bookingView"
                app:layout_constraintEnd_toStartOf="@+id/end"
                app:layout_constraintStart_toStartOf="@+id/start"
                app:layout_constraintTop_toBottomOf="@+id/bookingView" />

            <TextView
                android:id="@+id/bookingId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubikregular"
                android:text="@string/booking_id"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/center"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintTop_toBottomOf="@id/bookingView" />

            <TextView
                android:id="@+id/bookingIdNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/rubikregular"
                android:text="@string/View"
                android:textColor="@color/textcolor"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/center"
                app:layout_constraintStart_toStartOf="@+id/start"
                app:layout_constraintTop_toBottomOf="@+id/bookingId" />

            <TextView
                android:id="@+id/bookingJourney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubikregular"
                android:text="@string/service_type"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/bookingId"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintStart_toStartOf="@+id/center" />

            <TextView
                android:id="@+id/bookingJourneyType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubikregular"
                android:text="@string/View"
                android:textColor="@color/textcolor"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/bookingIdNo"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintStart_toStartOf="@+id/center" />

            <TextView
                android:id="@+id/bookingPassengers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubikregular"
                android:text="@string/passengers"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/center"
                app:layout_constraintStart_toStartOf="@+id/start"
                app:layout_constraintTop_toBottomOf="@+id/bookingIdNo" />

            <TextView
                android:id="@+id/bookingPassengerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/rubikregular"
                android:text="@string/View"
                android:textColor="@color/textcolor"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/start"
                app:layout_constraintTop_toBottomOf="@+id/bookingPassengers" />

            <TextView
                android:id="@+id/adults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/adult"
                app:layout_constraintBottom_toBottomOf="@+id/bookingPassengerDetails"
                app:layout_constraintStart_toEndOf="@+id/bookingPassengerDetails" />

            <TextView
                android:id="@+id/childCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/adults"
                app:layout_constraintStart_toEndOf="@+id/adults" />

            <TextView
                android:id="@+id/child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/child"
                app:layout_constraintBaseline_toBaselineOf="@+id/adults"
                app:layout_constraintStart_toEndOf="@+id/childCount" />

            <TextView
                android:id="@+id/bookingDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubikregular"
                android:text="@string/booking_date"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/center"
                app:layout_constraintStart_toStartOf="@+id/start"
                app:layout_constraintTop_toBottomOf="@+id/bookingPassengerDetails" />

            <TextView
                android:id="@+id/bookingDateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubikregular"
                android:text="@string/View"
                android:textColor="@color/textcolor"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/start"
                app:layout_constraintTop_toBottomOf="@+id/bookingDate" />

            <TextView
                android:id="@+id/bookingTotalService"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubikregular"
                android:text="@string/total_services"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/bookingPassengers"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/center" />

            <TextView
                android:id="@+id/bookingTotalServiceNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubikregular"
                android:text="@string/View"
                android:textColor="@color/textcolor"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/bookingPassengerDetails"
                app:layout_constraintStart_toStartOf="@+id/center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/service"
                app:layout_constraintBottom_toBottomOf="@+id/bookingTotalServiceNo"
                app:layout_constraintStart_toEndOf="@+id/bookingTotalServiceNo" />


            <View
                android:id="@+id/bookingDetailView"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/liteGrey"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="@id/end"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintTop_toBottomOf="@+id/bookingDateView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/countshape"
                android:backgroundTint="@color/complete_booking"
                android:layout_marginTop="10dp"
                android:padding="7dp"
                android:drawablePadding="4dp"
                android:text="@string/completed"
                android:textSize="14sp"
                android:visibility="invisible"
                android:textColor="@color/completedTextColor"
                android:fontFamily="@font/rubikregular"
                app:layout_constraintStart_toStartOf="@+id/start"
                app:layout_constraintTop_toBottomOf="@+id/bookingDetailView"
                app:drawableStartCompat="@drawable/ic_tick_green_1x" />

            <TextView
                android:id="@+id/bookingTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubikmedium"
                android:text="@string/View"
                android:textColor="@color/textcolor"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toStartOf="@+id/end" />

            <Spinner
                android:id="@+id/downloadSpinner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@color/background"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@+id/cContactBtn"
                app:layout_constraintEnd_toStartOf="@+id/end"
                app:layout_constraintStart_toStartOf="@+id/cContactBtn"
                app:layout_constraintTop_toTopOf="@+id/cContactBtn" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cContactBtn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/rubikmedium"
                android:text="@string/download_invoice"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_download_1x"
                app:iconGravity="textStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/end"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/start"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintVertical_bias="0.0"
                app:strokeColor="@color/blue"
                app:strokeWidth="1dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/serviceBooked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/service_booked"
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            android:fontFamily="@font/rubikmedium"
            app:layout_constraintEnd_toStartOf="@+id/rootEnd"
            app:layout_constraintStart_toStartOf="@+id/rootStart"
            app:layout_constraintTop_toBottomOf="@+id/bookingSecondLayout" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookingCompletedRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toStartOf="@+id/rootEnd"
            app:layout_constraintStart_toStartOf="@+id/rootStart"
            app:layout_constraintTop_toBottomOf="@+id/serviceBooked" />

        <View
            android:id="@+id/bookingCompletedView"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/liteGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bookingCompletedRecycler" />

        <TextView
            android:id="@+id/bookingContactPassengerDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubikmedium"
            android:text="@string/contact_passenger_details"
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/rootEnd"
            app:layout_constraintStart_toStartOf="@+id/rootStart"
            app:layout_constraintTop_toBottomOf="@+id/bookingCompletedView" />

        <TextView
            android:id="@+id/bookingContactPassengerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubikregular"
            android:text="@string/View"
            android:layout_marginTop="8dp"
            android:textColor="@color/textcolor"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/rootEnd"
            app:layout_constraintStart_toStartOf="@+id/rootStart"
            app:layout_constraintTop_toBottomOf="@+id/bookingContactPassengerDetails" />

        <TextView
            android:id="@+id/bookingContactPassengerNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/View"
            android:textSize="14sp"
            android:fontFamily="@font/rubikregular"
            app:layout_constraintStart_toStartOf="@+id/rootStart"
            app:layout_constraintTop_toBottomOf="@+id/bookingContactPassengerName"/>

        <View
            android:id="@+id/bookingPackageView"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginStart="10dp"
            android:background="@color/liteGrey"
            app:layout_constraintBottom_toBottomOf="@+id/bookingContactPassengerNo"
            app:layout_constraintStart_toEndOf="@+id/bookingContactPassengerNo"
            app:layout_constraintTop_toTopOf="@+id/bookingContactPassengerNo" />

        <TextView
            android:id="@+id/bookingContactPassengerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/rubikregular"
            android:text="@string/View"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/bookingPackageView"
            app:layout_constraintBaseline_toBaselineOf="@+id/bookingContactPassengerNo"/>

        <TextView
            android:id="@+id/bookingContactPassengerAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:text="@string/View"
            android:textSize="12sp"
            android:fontFamily="@font/rubikregular"
            app:layout_constraintTop_toBottomOf="@+id/bookingContactPassengerNo"
            app:layout_constraintStart_toStartOf="@id/rootStart"/>

        <TextView
            android:id="@+id/bookingOtherPassengerDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubikmedium"
            android:text="@string/other_passenger_details"
            android:visibility="visible"
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/rootEnd"
            app:layout_constraintStart_toStartOf="@+id/rootStart"
            app:layout_constraintTop_toBottomOf="@+id/bookingContactPassengerAge" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookingOtherPassengerRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toStartOf="@+id/rootEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/rootStart"
            app:layout_constraintTop_toBottomOf="@+id/bookingOtherPassengerDetails" />

        <TextView
            android:id="@+id/bookingServiceContactDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubikmedium"
            android:text="@string/greeter_family_contact_details"
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/rootEnd"
            app:layout_constraintStart_toStartOf="@+id/rootStart"
            app:layout_constraintTop_toBottomOf="@+id/bookingOtherPassengerRecycler" />

        <TextView
            android:id="@+id/bookingServiceContactPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/contact_passenger_name"
            android:visibility="visible"
            android:textSize="12sp"
            android:fontFamily="@font/rubikregular"
            app:layout_constraintStart_toStartOf="@id/rootStart"
            app:layout_constraintTop_toBottomOf="@+id/bookingServiceContactDetails"/>

        <TextView
            android:id="@+id/bookingServiceContactPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/rubikregular"
            app:layout_constraintTop_toBottomOf="@+id/bookingServiceContactPerson"
            app:layout_constraintStart_toStartOf="@id/rootStart"/>

        <TextView
            android:id="@+id/bookingServiceContactMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="visible"
            android:text="@string/contact_number"
            android:textSize="12sp"
            android:fontFamily="@font/rubikregular"
            app:layout_constraintStart_toStartOf="@id/rootCenter"
            app:layout_constraintBaseline_toBaselineOf="@+id/bookingServiceContactPerson"/>

        <TextView
            android:id="@+id/bookingServiceContactPersonMobileNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/rubikregular"
            app:layout_constraintBaseline_toBaselineOf="@+id/bookingServiceContactPersonName"
            app:layout_constraintStart_toStartOf="@id/rootCenter"/>

        <View
            android:id="@+id/bookingCompletedView2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="@color/liteGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bookingServiceContactPersonMobileNo" />

        <TextView
            android:id="@+id/bookingFlightDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubikmedium"
            android:text="@string/flight_details"
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/rootEnd"
            app:layout_constraintStart_toStartOf="@+id/rootStart"
            app:layout_constraintTop_toBottomOf="@+id/bookingCompletedView2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookingFlightRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            app:reverseLayout="false"
            app:layout_constraintEnd_toStartOf="@+id/rootEnd"
            app:layout_constraintStart_toStartOf="@+id/rootStart"
            app:layout_constraintTop_toBottomOf="@+id/bookingFlightDetails" />

        <TextView
            android:id="@+id/bookingTicketDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubikmedium"
            android:text="@string/e_ticket"
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/rootEnd"
            app:layout_constraintStart_toStartOf="@+id/rootStart"
            app:layout_constraintTop_toBottomOf="@+id/bookingFlightRecycler" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bookingTicketImage"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/invoice"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/rootStart"
            app:layout_constraintTop_toBottomOf="@+id/bookingTicketDetails"/>


        <View
            android:id="@+id/bookingTicketView"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="@color/liteGrey"
            app:layout_constraintEnd_toEndOf="parent"
